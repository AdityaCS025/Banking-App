# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for deployment platforms like Render, Railway, Heroku)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual database credentials (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vaultbank
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_minimum_32_characters_long
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# API Configuration
API_PREFIX=/api

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_RATE_LIMIT_WINDOW_MS=60000
OTP_RATE_LIMIT_MAX_REQUESTS=3
